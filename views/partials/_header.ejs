<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (typeof user !== "undefined") { %>
    <form class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">
        <p style="margin-top: 5px; margin-bottom: 0px">Logged in as: <%= user.email %></p>
        <button type="submit" class="btn btn-primary" style="margin-left: 10px">Logout</button>
      </div>
    </form>
    <% } else { %>
      <div>
        <a href="/register" class="btn btn-primary" style="margin-right: 10px;">Register</a>
        <a href="/login" class="btn btn-primary">Login</a>
      </div>
    <% } %>

  </nav>
</header>